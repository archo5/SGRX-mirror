
directory( "../data-tacstrike" );

// convex point sets
process( ["meshproc", "--convex", "-i", "$IN", "-o", "$OUT"], {
	"meshes/woodbox1.ssm" = "meshes/woodbox1.cps",
	"meshes/window1.ssm" = "meshes/window1.cps",
});

// textures
process( ["texproc", "--packtex", "-i", "$IN", "-o", "$OUT"], {
	"textures/%.png" = "textures/%.png.stx",
	"textures/props/%.png" = "textures/props/%.png.stx",
});
